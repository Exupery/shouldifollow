<div id="content" class="shadow">
	<div class="content_top">
		<h1>Twitter API Rate Limit Check <span class="parens">(dev mode only)</span></h1>
	</div>
	<% if Rails.env.development? %>
	<div id="rate_limits">
		<% limits = Ratelimit.new %>
		<table class="metrics_table">
			<thead>
				<tr class="heading_row">
					<th></th><th>Remaining</th><th>Limit</th><th>Resets in</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>users</td>
					<td><%= limits.user_lookups["remaining"] %></td>
					<td><%= limits.user_lookups["limit"] %></td>
					<td><%= (mins_from_now limits.user_lookups["reset"]).ceil %>m</td>
				</tr>
				<tr>
					<td>timelines</td>
					<td><%= limits.timelines["remaining"] %></td>
					<td><%= limits.timelines["limit"] %></td>
					<td><%= (mins_from_now limits.timelines["reset"]).ceil %>m</td>
				</tr>
				<tr>
					<td>oembeds</td>
					<td><%= limits.oembeds["remaining"] %></td>
					<td><%= limits.oembeds["limit"] %></td>
					<td><%= (mins_from_now limits.oembeds["reset"]).ceil %>m</td>
				</tr>
			</tbody>
		</table>
	</div>
	<% end %>
</div>