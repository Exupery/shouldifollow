<table class="metrics_table">
    <tr class="heading_row">
        <th></th>
        <th>past week</th>
        <th>past month</th>
    </tr>
    <tbody>
        <tr>
            <td class="left">tweets per day</td>
            <td class="metric"><%= tw.tweets_per_day "week" %></td>
            <td class="metric"><%= tw.tweets_per_day "month" %></td>
        </tr>
        <tr>
            <td class="left">retweets per day</td>
            <td class="metric"><%= tw.retweets_per_day "week" %></td>
            <td class="metric"><%= tw.retweets_per_day "month" %></td>
        </tr>
        <tr>
            <td class="left">combined per day</td>
            <td class="metric"><%= tw.combined_per_day "week" %></td>
            <td class="metric"><%= tw.combined_per_day "month" %></td>
        </tr>
    </tbody>
</table>

<h3 id="all_time"><span class="metric"><%= tw.all_per_day %></span> total per day <span class="parens">(includes @replies)</span> since joining Twitter on <%= tw.joined %><%= render 'layouts/tweet', :tw => tw %></h3>

<h2 class="avg_act_header">Activity timing <span class="parens">(as percent of last 200 tweets)</span></h2>
<table class="metrics_table">
    <tr class="heading_row">
        <th><span class="parens">(times in UTC)</span></th>
        <th>weekdays</th>
        <th>weekends</th>
    </tr>
    <tbody>
        <% tl = tw.timeline %>
        <% tl.timeframes.each { |tf| %>
            <tr>
                <td class="left"><%= tf %></td>
                <td class="metric"><%= tl.weekday_percent[tf] %></td>
                <td class="metric"><%= tl.weekend_percent[tf] %></td>
            </tr>
        <% } %>
    </tbody>
</table>

<% if tw.has_latest_tweet? %>
    <div id="timeline">
        <h3>Latest Tweet:</h3>
        <%= raw(tw.get_recent_tweet_html) %>
    </div>
<% end %>