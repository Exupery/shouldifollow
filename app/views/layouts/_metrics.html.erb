<table class="metrics_table">
    <tr class="heading_row">
        <th></th>
        <th>past week</th>
        <th>past month</th>
    </tr>
    <tbody>
        <tr>
            <td>tweets per day</td>
            <td><%= tw.tweets_per_day "week" %></td>
            <td><%= tw.tweets_per_day "month" %></td>
        </tr>
        <tr>
            <td>retweets per day</td>
            <td><%= tw.retweets_per_day "week" %></td>
            <td><%= tw.retweets_per_day "month" %></td>
        </tr>
        <tr>
            <td>combined per day</td>
            <td><%= tw.combined_per_day "week" %></td>
            <td><%= tw.combined_per_day "month" %></td>
        </tr>
    </tbody>
</table>

<h3><span class="metric"><%= tw.all_per_day %></span> total per day <span class="parens">(since joining Twitter, includes @replies)</span></h3>

<% if tw.has_latest_tweet? %>
    <div id="timeline">
        <h3>Latest Tweet:</h3>
        <%= raw(tw.get_recent_tweet_html) %>
    </div>
<% end %>