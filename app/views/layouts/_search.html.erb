<div id="content">

  <div id="search_area">
    <h1>Should I follow</h1>
    <%# using should-i-follow, Twitter doesn't allow usernames with hyphens so using something that won't interfere with any potential searches %>
    <%= form_tag("/should-i-follow", :method=>"get") do %>
      <%= label_tag(:username, "@") %>
      <%= text_field_tag(:uname, "username", "id"=>"username", :maxlength=>20) %>
      <%= submit_tag("?", "id"=>"submit") %>
    <% end %>
  </div>
  
  <% uname = params[:uname] %>
  <% if uname %>
    <div id="stats" class="green-bottom">
      <h2>Average activity for <%= link_to("@#{uname}", "https://twitter.com/#{uname}", "class"=>"uname_link") %>:</h2>
      <% stats = get_stats(uname) %>
      <h3><span class="metric"><%= stats["tpd"] %></span> tweets per day <span class="parens">(last two weeks)</span></h3>
      <h3><span class="metric"><%= stats["rtpd"] %></span> retweets per day <span class="parens">(last two weeks)</span></h3>
      <h3><span class="metric"><%= stats["trtpd"] %></span> tweets+retweets per day <span class="parens">(last two weeks)</span></h3>
      <h3><span class="metric"><%= stats["totalpd"] %></span> total per day <span class="parens">(since creation, includes replies)</span></h3>
    </div>

    <div id="profile" class="green-bottom">
      <h3>profile</h3>
    </div>

    <div id="timeline">
      <h3>recent tweets</h3>
    </div>
  <% else %>
    <%= render 'layouts/expl' %>
  <% end %>

</div>